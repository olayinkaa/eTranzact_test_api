  "servers": [
    {
      "url": "http://localhost:12000/api/etz",
      "description": "Local server",
      "variables":{
        "environment":{
          "default":"",
          "enum":[
            ""
          ]
        }
      }
    },
    {
      "url": "https://etranzact-test-api.herokuapp.com/api/etz",
      "description": "Staging server"
    }
  ],
  "tags": [
    {
      "name": "CategoryController",
      "description": "API for categories in the system"
    },
    {
      "name": "ProductController",
      "description": "API for products in the system"
    },
    {
      "name": "UserController",
      "description": "API for users in the system"
    }
  ],
  "paths":{
      "/category":{
        "get":{
          "tags": ["CategoryController"],
          "summary": "API endpoint to retrieve product category",
          "description" : "Find product categories from the database",
          "operationId": "getCategory",
          "responses":{
            "200":{
              "description" : "Successfully Processed",
              "content":{
                "application/json":{
                  "schema": {
                    "type":"array",
                    "items":{
                      "$ref" : "#/components/schemas/CategoryResponse"
                    }
                  }
                }
              }
            },
            "400":{
              "description" : "Bad request"
            }
          }
        }
      }
  },
  "components": {
    "schemas": {
      "Category": {
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "CategoryResponse": {
        "properties": {
          "_id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
     
    }
  }
  
}